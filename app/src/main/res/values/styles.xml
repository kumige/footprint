<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/colorText</item>
        <item name="backgroundCardColor">#ffffff</item>
        <item name="backgroundColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <!-- Dark theme -->
    <style name="DarkTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorPrimary">@color/colorDarkElevation</item>
        <item name="colorPrimaryDark">@color/colorDarkElevation</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="primaryTextColor">@color/colorWhite</item>
        <item name="backgroundCardColor">@color/colorDarkElevation</item>
        <item name="backgroundColor">@color/colorDarkBackground</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>
